
@{
    ViewBag.Title = "TKSoDonHang";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">

                    <div class="row">
                        <!-- card1 start -->
                        <div class="col-md-12 col-xl-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-header-left">
                                        <h4>Thống kê số đơn hàng trong ngày</h4>
                                    </div>
                                    <div class="card-header-right">
                                        <ul class="list-unstyled card-option">

                                            <li>
                                                <i class="icofont icofont-refresh reload-card"></i>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <!-- table / start -->
                                    <div class="card-block table-border-style">
                                        <div class="table-wrap table-wrapper-scroll-y" id="style-1">
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th style="text-align: center" width="10%">Ngày</th>
                                                            <th style="text-align: center" width="10%">Tháng</th>
                                                            <th style="text-align: center" width="10%">Năm</th>
                                                            <th style="text-align: center" width="30%">Số đơn hàng</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>

                                                        @foreach (var it in ViewBag.MyList)
                                                        {
                                                            <tr class="accordion-toggle" data-toggle="collapse"
                                                                data-target="#col1">
                                                                <td style="text-align: center">@it.ngay</td>
                                                                <td style="text-align: center">@it.thang</td>
                                                                <td style="text-align: center">@it.nam</td>
                                                                <td style="text-align: center">@it.sodonhang</td>


                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- table / end -->
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
            <div id="styleSelector"></div>
        </div>
    </div>
</div>

