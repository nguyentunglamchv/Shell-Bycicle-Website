
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="container-fluid ">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-box">
                            <h1>
                                Xe đạp, xe máy điện
                            </h1>
                            <p>
                                Sale tưng bừng , mừng đại lễ 2-9
                            </p>
                            <p>
                                Nhanh tay mua sắm nhận ưu đãi khủng!!!
                            </p>
                            <div class="btn-box">
                                <a href="" class="btn1">
                                    Liên hệ
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="img-box">
                            <img src="~/Images/baner-xe-dap-dien-11.jpg" alt="">
                        </div>
                        <div class="img-box">
                            <img src="~/Images/Banner-3.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>

<!-- shop section -->

<section class="shop_section layout_padding">

    <div class="container">
        <div class="heading_container ">
            <h2>
                Xe đạp thể thao
            </h2>
        </div>
        <div class="row">

            @Html.Action("TopXeDapTheThao", "DanhMuc")

        </div>
        <div class="btn-box">
            <a class=" d-flex " href="@Url.Action("XeDapTheThao", "DanhMuc")">
                Xem thêm
            </a>
        </div>
        <br />
        <div class="heading_container ">
            <h2>
                Xep đạp điện
            </h2>
        </div>
        <div class="row">

            @Html.Action("TopXeDapDien", "DanhMuc")

        </div>
        <div class="btn-box">
            <a href="@Url.Action("XeDapDien", "DanhMuc")">
                Xem thêm
            </a>
        </div>
        <br />
        <div class="heading_container ">
            <h2>
                Xe máy điện
            </h2>
        </div>
        <div class="row">

            @Html.Action("TopXeMayDien", "DanhMuc")

        </div>
        <div class="btn-box">
            <a href="@Url.Action("XeMayDien", "DanhMuc")">
                Xem thêm
            </a>
        </div>
        <br />
        <div class="heading_container">
            <h2>
                Phụ kiện
            </h2>
        </div>
        <div class="row">

            @Html.Action("TopPhuKien", "DanhMuc")
        </div>
        <div class="btn-box">
            <a href="@Url.Action("PhuKien", "DanhMuc")">
                Xem thêm
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->
<!-- contact section -->

<section class="contact_section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div class="heading_container">
                        <h2>
                            Liên hệ với chúng tôi
                        </h2>
                    </div>
                    <form action="">
                        <div>
                            <input type="text" placeholder="Họ và tên " />
                        </div>
                        <div>
                            <input type="email" placeholder="Email" />
                        </div>
                        <div>
                            <input type="text" placeholder="Số điện thoại" />
                        </div>
                        <div>
                            <input type="text" class="message-box" placeholder="Thông điệp của bạn" />
                        </div>
                        <div class="d-flex ">
                            <button>
                                Gửi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/Images/image-contact.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end contact section -->
<!-- client section -->
