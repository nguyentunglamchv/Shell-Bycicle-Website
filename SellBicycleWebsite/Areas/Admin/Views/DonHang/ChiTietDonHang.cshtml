@model IEnumerable<SellBicycleWebsite.Models.CT_DonHang>

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <h2>Chi tiết đơn hàng</h2>

                        
                        <table class="table">
                            <tr>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Số lượng
                                </th>
                                <th>
                                    Đơn giá
                                </th>
                                <th>
                                    Thành tiền
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ma_DH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ma_SP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SanPham.ten_SP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soluongban)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dongiaban)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.thanhtien)
                            </td>
                            
                        </tr>
                            }

                        </table>
                    </div>
                </div>
                <div id="styleSelector"></div>
            </div>
        </div>
    </div>
